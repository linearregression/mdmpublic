# -*- mode: ruby -*-
#################################################################################
# Configurable Parameters
VM_MEMORY_MB = 5120 # Default is 5120MB 
VM_CPU_CORES = 3
# When empty, disable folder share.
FOLDER_SHARE=""
#################################################################################

Vagrant.configure(2) do |config|
  config.vm.box = "ubuntu/trusty64" # The OS is Ubuntu 14.04 64 bits
  config.vm.hostname = "mdmsandbox.totvs.com"
  config.vm.provider "virtualbox" do |vb|
    vb.name = "vagrant-sandbox"
    vb.customize ["modifyvm", :id, "--memory", VM_MEMORY_MB, "--cpus", VM_CPU_CORES]
  end

  # host-only network
  config.vm.network :private_network, ip: "192.168.50.10"

  if FOLDER_SHARE != ""
    config.vm.synced_folder FOLDER_SHARE, "/root/docker/" + FOLDER_SHARE, \
                            owner: "root", group: "root", create: "true", \
                            mount_options: ['dmode=777', 'fmode=777']
  end

  config.vm.provision "shell", inline: <<-SHELL
      which curl 1>/dev/null 2>/dev/null || sudo apt-get install -y curl
      curl -L https://raw.githubusercontent.com/TOTVS/mdmpublic/master/test/bootstrap_mdm_sandbox.sh | bash -e
  SHELL
end
